                    android:layout_weight="1"
                    app:srcCompat="@drawable/stone" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="460dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/main_IMG_Stone_0_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/stone" />

                <ImageView
                    android:id="@+id/main_IMG_Stone_1_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/stone" />

                <ImageView
                    android:id="@+id/main_IMG_Stone_2_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/stone" />


                <ImageView
                    android:id="@+id/main_IMG_Stone_3_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/stone" />

                <ImageView
                    android:id="@+id/main_IMG_Stone_4_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/stone" />
                <ImageView
                    android:id="@+id/main_IMG_Stone_5_4"
